@model IEnumerable<suivi_abonnement.Models.Abonnement>;


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Abonnement - Page PDF</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .ticket {
            border: 2px solid #007bff;
            padding: 20px;
            border-radius: 15px;
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .ticket-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .ticket-icon {
            font-size: 40px;
            color: #007bff;
        }

        .ticket-details {
            margin-top: 15px;
        }

        .ticket-footer {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Détails de l'Abonnement</h1>

        @foreach (var abonnement in Model)
        {
            <div class="ticket">
                <div class="ticket-header">
                    <div class="ticket-icon">
                        <i class="bi bi-file-earmark-check"></i> <!-- Icône Bootstrap -->
                    </div>
                    <h3 class="mb-0">@abonnement.Nom</h3>
                </div>
                <div class="ticket-details">
                    <p><strong>Description :</strong> @abonnement.Description</p>
                    <p><strong>Prix :</strong> @abonnement.Prix €</p>
                    <p><strong>Type :</strong> @abonnement.Type</p>
                    <p><strong>Date de début :</strong> @abonnement.DateDebut.ToString("dd MMMM yyyy")</p>
                    <p><strong>Date d'expiration :</strong> @abonnement.ExpirationDate.ToString("dd MMMM yyyy")</p>
                    <p><strong>Catégorie :</strong> @abonnement.NomCategorie</p>
                    <p><strong>Fournisseur :</strong> @abonnement.NomFournisseur</p>
                </div>
                <div class="ticket-footer">
                    <p>Merci pour votre abonnement avec @abonnement.NomFournisseur</p>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
